@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<MVCWebApp.Models.Student>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-4 text-end">
        <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
            Create New Student
        </a>
        </div>
    </div>
    <br/>
    <form asp-controller="Student" asp-action="Index">
        <p>
            Name : <input type="text" name="SearchString" />
            <input type="submit" value="Filter">
        </p>
    </form>
    <br/>
    @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>Student Name</th><th>Class</th><th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj1 in Model)
                {
                    <tr><td width="50%">@obj1.Name</td>
                    <td>@obj1.Class</td><td>
    <a class="btn btn-primary" asp-route-id="@obj1.StudentID" asp-controller="Student" asp-action="Edit">Edit</a>
    <a class="btn btn-primary" asp-route-id="@obj1.StudentID" asp-controller="Student" asp-action="Delete">Delete</a>
</td></tr>
                }
                    </tbody>
                </table>
            }
    else
    {
    <p> No student details.</p>
    }
    </div>